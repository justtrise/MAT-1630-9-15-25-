def check_string(s):
  if s.islpha():
    print('"the string contains only letters')
  else:
    print('"the string not contains letters and numbers') 
  if s.isdigit():
    print('"the string contains only numbers')
  else:
    print('"the string not contains letters and numbers')
  if s.isalnum() and s(0).islapha():
    print('"the string contains only letters and numbers')
  else:
    print('"the string not contains only letters and numbers')  
  if s.islower() and s.isalpha():
    print('"the string contains only lower case letters')
  else:
    print('"the string not contains only lower case letters') 
  if s.isupper() and s.isalpha():
    print('"the string contains only upper case letters')
  else:
    print('"the string not contains only upper case letters') 
  if s.endwith():
    print('"the string ends with a period')
  else:
    print('"the string does not end with a period')
user_input = input("Enter a string: ")
check_string(user_input)
